{
    "extends": "react-app",
    "plugins": [
        "react", "react-hooks"
    ],
    "root": true,
    "rules": {
        "react-hooks/rules-of-hooks": 0, //"error", // 检查 Hook 的规则
        "react-hooks/exhaustive-deps": 0 //"warn" // 检查 effect 的依赖
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "ecmaVersion": 8,
        "ecmaFeatures": {
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    }
}